<PreloadAll>0</PreloadAll>
<RecordCFGCache>0</RecordCFGCache>
<ScriptFilename>Console.ini</ScriptFilename>
<RenderTransportRoute>1</RenderTransportRoute>
<MinimapRotation>1</MinimapRotation>
