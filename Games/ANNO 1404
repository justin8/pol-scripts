<EnableLargeFOV>0</EnableLargeFOV>
<m_PickHighlightEnabled>1</m_PickHighlightEnabled>
<VolumeMain>999</VolumeMain>
<VolumeAmbiente>500</VolumeAmbiente>
<VolumeSpeech>500</VolumeSpeech>
